<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="AlfinfData.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AlfinfData.Views"
    Shell.BackgroundColor="#71639e"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White"
    Shell.NavBarHasShadow="False"
    FlyoutBehavior="Flyout">

    <!-- Barra superior -->
    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto" BackgroundColor="#71639e">
            <Button ImageSource="btncuadrados.png"
                    Clicked="OnBackToMainClicked"
                    BackgroundColor="Transparent"
                    HeightRequest="30"
                    WidthRequest="30"
                    Padding="0"/>
            <VerticalStackLayout x:Name="TituloStack"
                                 Grid.Column="1"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Start"
                                 Margin="10,0,0,0"
                                 Spacing="0">
                <Label Text="{Binding Titulo}"
                       TextColor="White"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center"/>
                <Label Text="{Binding FechaHora}"
                       TextColor="White"
                       FontSize="12"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
            <Button ImageSource="trespuntos.png"
                    Grid.Column="2"
                    Clicked="OnAbrirConfiguracionClicked"
                    BackgroundColor="Transparent"
                    HeightRequest="50"
                    WidthRequest="40"
                    Padding="0"/>
        </Grid>
    </Shell.TitleView>

    <!-- Menú lateral -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="White" Padding="20">
            <VerticalStackLayout HorizontalOptions="Center">
                <Image Source="menusuperior.png" WidthRequest="200" HeightRequest="80"/>
                <Label Text="{Binding FechaMenu}"
                       FontSize="Small"
                       TextColor="Gray"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Página inicial -->
    <ShellContent Route="main" ContentTemplate="{DataTemplate views:MainPage}" />

    <!-- Pie de menú -->
    <Shell.FlyoutFooter>
        <Button Text="Salir"
                BackgroundColor="#71639e"
                TextColor="White"
                Margin="10"
                CornerRadius="10"
                Clicked="OnSalirClicked"/>
    </Shell.FlyoutFooter>
</Shell>
