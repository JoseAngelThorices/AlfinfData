<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="AlfinfData.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AlfinfData.Views"
    Shell.BackgroundColor="#71639e"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White"
    Shell.NavBarHasShadow="False"
    FlyoutBehavior="Flyout">

    <!-- Título superior con botón de regreso, título y fecha -->
    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto" BackgroundColor="#71639e" HeightRequest="60">

            <!-- Botón cuadrado a la izquierda -->
            <Button Grid.Column="0"
                ImageSource="btncuadrados.png"
                Clicked="OnBackToMainClicked"
                BackgroundColor="Transparent"
                HeightRequest="30"
                WidthRequest="30"
                Padding="0"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>

            <!-- Botón de configuración a la derecha -->
            <Button Grid.Column="2"
                ImageSource="trespuntos.png"
                Clicked="OnAbrirConfiguracionClicked"
                BackgroundColor="Transparent"
                HeightRequest="30"
                WidthRequest="30"
                Padding="0"
                HorizontalOptions="End"
                VerticalOptions="Center"/>

            <!-- CENTRADO REAL - siempre visible y centrado -->
            <VerticalStackLayout
            Grid.ColumnSpan="3"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            InputTransparent="True"
            Spacing="0">
                <Label Text="{Binding Titulo}"
                   TextColor="White"
                   FontSize="Medium"
                   HorizontalTextAlignment="Center"/>
                <Label Text="{Binding FechaHora}"
                   TextColor="White"
                   FontSize="12"
                   HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.TitleView>


    <!-- Cabecera del menú lateral -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="White" Padding="20">
            <VerticalStackLayout HorizontalOptions="Center">
                <Image Source="menusuperior.png"/>
                <Label Text="{Binding FechaMenu}"
                       FontSize="Small"
                       TextColor="Gray"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Página inicial -->
    <ShellContent Route="main"
                  ContentTemplate="{DataTemplate views:MainPage}" />

    <!-- Pie del menú -->
    <Shell.FlyoutFooter>
        <Button Text="Salir"
                BackgroundColor="#71639e"
                TextColor="White"
                Margin="10"
                CornerRadius="10"
                Clicked="OnSalirClicked"/>
    </Shell.FlyoutFooter>
</Shell>
