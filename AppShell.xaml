<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AlfinfData.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AlfinfData.Views"
    FlyoutBehavior="Disabled"
    Title="AlfinfData"
    Shell.BackgroundColor="#71639e"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White"
    Shell.NavBarHasShadow="False">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto" BackgroundColor="#71639e">
            <!-- Botón izquierdo: retroceder a MainPage -->
            <Button ImageSource="btncuadrados.png"
                    Clicked="OnBackToMainClicked"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    HeightRequest="30"
                    WidthRequest="30"
                    Padding="0"/>

            <Label Text="AlfinfData"
                   Grid.Column="1"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="Medium"
                   TextColor="White" />

            <!-- Botón derecho: configuración -->
            <Button ImageSource="trespuntos.png"
                    Grid.Column="2"
                    Command="{Binding OpenConfiguracionMenuCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    HeightRequest="50"
                    WidthRequest="40"
                    Padding="0"/>
        </Grid>
    </Shell.TitleView>

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
</Shell>
