<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlfinfData.Views.Horas.CalcularPage"
             BackgroundColor="#f0f0f0"
             Title="Horas">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="15">

            <!-- Mostrar y A. Selección -->
            <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="5">
                <!-- Columna 0: Label + Picker -->
                <StackLayout Margin="0,0,5,0">
                    <Label Text="Mostrar (0 jor.)"
                           FontSize="14"
                           TextColor="Black"
                           FontAttributes="Bold"
                           HorizontalOptions="Start"/>
                    <Picker x:Name="pickerCuadrilla"
                            BackgroundColor="#fbffb8"
                            HeightRequest="45"
                            WidthRequest="150"
                            TitleColor="Black"
                            TextColor="Black"
                            HorizontalTextAlignment="Start"
                            Margin="0"
                            HorizontalOptions="Start"/>
                </StackLayout>

                <!-- Columna 1: Label + Botón -->
                <StackLayout Grid.Column="1" Spacing="0" Padding="0">
                    <Label Text="A. Selección"
                           FontSize="14"
                           TextColor="Black"
                           FontAttributes="Bold"
                           HorizontalOptions="Start"/>
                    <Button x:Name="SeleccionButton"
                            Text="SI"
                            BackgroundColor="#3cb043"
                            TextColor="White"
                            HeightRequest="45"
                            WidthRequest="100"
                            Clicked="OnSeleccionToggled"
                            HorizontalOptions="Start"
                            Margin="0"/>
                </StackLayout>

                <!-- Columna 2: Espacio adicional -->
                <BoxView Grid.Column="2"
                         WidthRequest="10"
                         BackgroundColor="Transparent"/>
            </Grid>


            <!-- Cuadrilla -->
            <VerticalStackLayout Spacing="2">
                <Label Text="Cuadrilla" FontSize="14" TextColor="Black" FontAttributes="Bold" />
                <Picker BackgroundColor="#fbffb8" HeightRequest="45" TitleColor="Black" TextColor="Black" />
            </VerticalStackLayout>

            <!-- Nº Lista y Nombre adaptado -->
            <Grid ColumnDefinitions="0.7*,1.5*" ColumnSpacing="10">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Nº Lista" FontSize="14" FontAttributes="Bold" TextColor="Black" />
                    <Picker x:Name="pickerLista"
                            BackgroundColor="#fbffb8"
                            HeightRequest="45"
                            TextColor="Black"
                            HorizontalTextAlignment="Start"
                            HorizontalOptions="FillAndExpand" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="2">
                    <Label Text="Nombre" FontSize="14" FontAttributes="Bold" TextColor="Black" />
                    <Picker x:Name="pickerNombre"
                            BackgroundColor="#fbffb8"
                            HeightRequest="45"
                            TextColor="Black"
                            HorizontalTextAlignment="Start"
                            HorizontalOptions="FillAndExpand" />
                </VerticalStackLayout>
            </Grid>

            <!-- Cabecera con FALTA (botón debajo) -->
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                <Label Text="H. Normal" Grid.Column="0" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" />
                <Label Text="H. Extra1" Grid.Column="1" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" />
                <Label Text="H. Extra2" Grid.Column="2" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" />
                <VerticalStackLayout Grid.Column="3" Spacing="2" HorizontalOptions="Center">
                    <Label Text="Falta" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center" />
                    <Button x:Name="FaltaButton"
                            Text="SI"
                            BackgroundColor="#3cb043"
                            TextColor="White"
                            WidthRequest="60"
                            HeightRequest="40"
                            
                            HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>

            <!-- Calculadora -->
            <VerticalStackLayout Spacing="10" Margin="0,20">
                <!-- Visor -->
                <Entry x:Name="visorCalculadora"
                       FontSize="20"
                       IsReadOnly="True"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="FillAndExpand" />

                <!-- Teclado -->
                <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="*,*,*,*" ColumnSpacing="1" RowSpacing="1">
                    <Button Text="1" Grid.Row="0" Grid.Column="0" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="2" Grid.Row="0" Grid.Column="1" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="3" Grid.Row="0" Grid.Column="2" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="G.HORAS" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" BackgroundColor="#686d67" TextColor="White" Clicked="OnGHorasClicked" />

                    <Button Text="4" Grid.Row="1" Grid.Column="0" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="5" Grid.Row="1" Grid.Column="1" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="6" Grid.Row="1" Grid.Column="2" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="H.N." Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" BackgroundColor="#686d67" TextColor="White" Clicked="OnHNClicked" />

                    <Button Text="7" Grid.Row="2" Grid.Column="0" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="8" Grid.Row="2" Grid.Column="1" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="9" Grid.Row="2" Grid.Column="2" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="H.E1" Grid.Row="2" Grid.Column="3" BackgroundColor="#686d67" TextColor="White" Clicked="OnHEClicked" />
                    <Button Text="H.E2" Grid.Row="2" Grid.Column="4" BackgroundColor="#686d67" TextColor="White" Clicked="OnHEClicked" />

                    <Button Text="," Grid.Row="3" Grid.Column="0" Clicked="OnCommaClicked" BackgroundColor="#004182" />
                    <Button Text="0" Grid.Row="3" Grid.Column="1" Clicked="OnNumeroClicked" BackgroundColor="#004182" />
                    <Button Text="C" Grid.Row="3" Grid.Column="2" Clicked="OnClearClicked" BackgroundColor="#004182" TextColor="White" />
                </Grid>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
