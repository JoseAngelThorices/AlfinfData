<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlfinfData.Views.Horas.HorasPage"
             BackgroundColor="#e9e9e9"
             Title="Horas"
             Shell.NavBarIsVisible="True">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Grid Padding="5" RowSpacing="5" ColumnSpacing="5" RowDefinitions="Auto, Auto, 3*, *">

        <!-- Fila amarilla con Picker -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="0,5">
            <Picker x:Name="GrupoPicker"
                    Title="Selecciona grupo"
                    BackgroundColor="#fbffb8"
                    TitleColor="Black"
                    TextColor="Black"
                    FontSize="16"
                    HeightRequest="45"
                    Margin="5"
                    HorizontalOptions="FillAndExpand" />

            <Button ImageSource="calcular.png"
                    BackgroundColor="Transparent"
                    WidthRequest="45"
                    HeightRequest="45"
                    Padding="0"    
                    Grid.Column="1"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    CornerRadius="10" />
        </Grid>

        <!-- Cabecera tabla -->
        <Grid Grid.Row="1" ColumnSpacing="5"
        ColumnDefinitions="23,2*,50,45,42,38,70"

      Padding="7,0">
            <Label Text="N.L" 
       FontSize="14" 
       TextColor="Black" 
       FontAttributes="Bold" 
       VerticalOptions="Center" 
       Margin="0,1,5,1" />
            <Label Text="Nombre" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="1" Margin="5,1" />
            <Label Text="HN" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="2" HorizontalTextAlignment="Center" Margin="5,1" />
            <Label Text="HE1" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="3" HorizontalTextAlignment="Center" Margin="5,1" />
            <Label Text="HE2" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="4" HorizontalTextAlignment="Center" Margin="5,1" />
            <Label Text="Falta" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="5" HorizontalTextAlignment="Center" Margin="5,1" />
            <Label Text="Detalles" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="6" HorizontalTextAlignment="Center" Margin="5,1" />
        </Grid>


        <!-- Lista -->
        <Frame Grid.Row="2"
               Grid.RowSpan="2"
               CornerRadius="10"
               BorderColor="#a0a0a0"
               BackgroundColor="White"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               Padding="5"
               HasShadow="False">
            
            <CollectionView x:Name="ListaHoras" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="32,*,60,60,60,50,Auto" Padding="5">
                            <Label Text="{Binding NumeroLista}" TextColor="Black" VerticalOptions="Center" VerticalTextAlignment="Center" />
                            <Label Text="{Binding Nombre}" 
                                   Grid.Column="1"
                                   TextColor="Black"
                                   FontSize="12"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="5,0" />

                            <Entry Text="{Binding HN}"
                                   Grid.Column="2"
                                   FontSize="12"
                                   BackgroundColor="Transparent"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="31" />

                            <Entry Text="{Binding HE1}"
                                   Grid.Column="3"
                                   FontSize="12"
                                   BackgroundColor="Transparent"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="31" />

                            <Entry Text="{Binding HE2}"
                                   Grid.Column="4"
                                   FontSize="12"
                                   BackgroundColor="Transparent"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="31" />

                            <Switch IsToggled="{Binding Falta}"
                                    Grid.Column="5"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />

                            <ImageButton Grid.Column="6"
                                     Source="iconlist.png"
                                     WidthRequest="40"
                                     HeightRequest="40"
                                     Aspect="AspectFit"
                                     BackgroundColor="Transparent"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Clicked="OnDetalleClicked" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

    </Grid>
</ContentPage>
