<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlfinfData.Views.Horas.HorasPage"
             BackgroundColor="#e9e9e9"
             Title="Horas"
             Shell.NavBarIsVisible="True">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Grid Padding="5" RowSpacing="5" ColumnSpacing="5" RowDefinitions="Auto, Auto, 3*, *">

        <!-- Fila amarilla con Picker -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="0,5" Margin="0">
            <Picker x:Name="GrupoPicker"
                    Title="Selecciona grupo"
                    BackgroundColor="#fbffb8"
                    TitleColor="Black"
                    TextColor="Black"
                    FontSize="16"
                    HeightRequest="45"
                    Margin="5"
                    HorizontalOptions="FillAndExpand" />

        </Grid>

        <!-- Cabecera tabla - Ajusté los anchos de columna -->
        <Grid Grid.Row="1" ColumnSpacing="0"
              ColumnDefinitions="30,*,50,50,60,50,70"
              Padding="7,0">
            <Label Text="N.L" FontSize="13" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="0" HorizontalTextAlignment="Center"/>
            <Label Text="Nombre" FontSize="13" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="1" HorizontalTextAlignment="Center"/>
            <Label Text="HN" FontSize="13" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="2" HorizontalTextAlignment="Center"/>
            <Label Text="HE1" FontSize="13" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="3" HorizontalTextAlignment="Center"/>
            <Label Text="HE2" FontSize="13" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="4" HorizontalTextAlignment="Center"/>
            <Label Text="Falta" FontSize="13" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="5" HorizontalTextAlignment="Center"/>
            <Label Text="Detalles" FontSize="13" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="6" HorizontalTextAlignment="Center"/>
        </Grid>

        <!-- Lista - Ajusté los elementos para perfecta alineación -->
        <Frame Grid.Row="2"
               Grid.RowSpan="2"
               CornerRadius="10"
               BorderColor="#a0a0a0"
               BackgroundColor="White"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               Padding="5"
               HasShadow="False">

            <CollectionView x:Name="ListaHoras" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="30,*,50,50,50,50,70" 
                              Padding="0" 
                              VerticalOptions="Center"
                              HeightRequest="40">

                            <!-- Número de lista -->
                            <Label Text="{Binding NumeroLista}" 
                                   Grid.Column="0"
                                   TextColor="Black" 
                                   FontSize="14"
                                   VerticalOptions="Center" 
                                   HorizontalTextAlignment="Center"/>

                            <!-- Nombre -->
                            <Label Text="{Binding Nombre}" 
                                   Grid.Column="1"
                                   TextColor="Black"
                                   FontSize="14"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="30,0"/>

                            <!-- HN -->
                            <Entry Text="{Binding HN}"
                                   Grid.Column="2"
                                   FontSize="14"
                                   BackgroundColor="Transparent"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="40"/>

                            <!-- HE1 -->
                            <Entry Text="{Binding HE1}"
                                   Grid.Column="3"
                                   FontSize="14"
                                   BackgroundColor="Transparent"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="40"/>

                            <!-- HE2 -->
                            <Entry Text="{Binding HE2}"
                                   Grid.Column="4"
                                   FontSize="14"
                                   BackgroundColor="Transparent"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="40"/>

                            <!-- Falta -->
                            <Switch IsToggled="{Binding Falta}"
                                    Grid.Column="5"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>

                            <!-- Detalles -->
                            <ImageButton Grid.Column="6"
                                         Source="iconlist.png"
                                         WidthRequest="30"
                                         HeightRequest="30"
                                         Aspect="AspectFit"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Clicked="OnDetalleClicked"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>
    </Grid>
</ContentPage>