<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlfinfData.Views.Inicio.InicioPage"
             Title="InicioPage"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Margin="40" Spacing="20">

            <Label Text="MENÚ INICIO"
                   HorizontalOptions="Center"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,10"/>

            <!-- Botones en vertical -->
            <Button Text="NUEVO DÍA"
                    Command="{Binding NuevoDiaCommand}"
                    BackgroundColor="#71639e"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="5"
                    HeightRequest="60"/>

            <Button Text="ENTRADA"
                    Command="{Binding EntradaCommand}"
                    BackgroundColor="#71639e"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="5"
                    HeightRequest="60"/>

            <Button Text="DESCARGAS"
                    Command="{Binding DescargasCommand}"
                    BackgroundColor="#71639e"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="5"
                    HeightRequest="60"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>