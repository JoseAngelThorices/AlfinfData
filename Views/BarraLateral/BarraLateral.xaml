<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AlfinfData.Views.BarraLateral.BarraLateral"
    BackgroundColor="White"
    Padding="10"
    Spacing="0">

    <!-- Logo -->
    <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
        <Image Source="menusuperior.png" WidthRequest="200" HeightRequest="90"/>
    </VerticalStackLayout>

    <!-- SecciÃ³n FICHAJES -->
    <Label Text="1. Fichajes" FontAttributes="Bold" FontSize="16" TextColor="Gray" Margin="10,20,0,10"/>

    <!-- Entradas -->
    <Grid Padding="15,10" BackgroundColor="White">
        <Label Text="Entradas" TextColor="Black" VerticalOptions="Center" />
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding EntradasCommand}" />
        </Grid.GestureRecognizers>
    </Grid>

    <!-- Salidas -->
    <Grid Padding="15,10" BackgroundColor="White">
        <Label Text="Salidas" TextColor="Black" VerticalOptions="Center" />
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding SalidasCommand}" />
        </Grid.GestureRecognizers>
    </Grid>

    <!-- Inicio Descanso -->
    <Grid Padding="15,10" BackgroundColor="White">
        <Label Text="Inicio Descanso" TextColor="Black" VerticalOptions="Center" />
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding InicioDescansoCommand}" />
        </Grid.GestureRecognizers>
    </Grid>

    <!-- Fin Descanso -->
    <Grid Padding="15,10" BackgroundColor="White">
        <Label Text="Fin Descanso" TextColor="Black" VerticalOptions="Center" />
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding FinDescansoCommand}" />
        </Grid.GestureRecognizers>
    </Grid>

    <!-- Alta NFC -->
    <Grid Padding="15,10" BackgroundColor="White">
        <Label Text="Alta NFC" TextColor="Black" VerticalOptions="Center" />
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnAccesoDirectoAltaNFC"/>
        </Grid.GestureRecognizers>
    </Grid>

</VerticalStackLayout>
