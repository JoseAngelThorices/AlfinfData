<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AlfinfData.ViewModels"
             x:Class="AlfinfData.Views.MainPage"
             Title="MainPage">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*,Auto"
          BackgroundColor="{StaticResource PageBackgroundColor}">


        <!-- Contenedor principal de botones estilo "Inicio" -->
        <Grid Grid.Row="1" RowDefinitions="*,*,*"

              ColumnDefinitions="*,*"
              RowSpacing="15"
              ColumnSpacing="15"
              Padding="20"
              VerticalOptions="Center">

            <!-- Fila 1 -->

            <!-- Botón Inicio -->

            <VerticalStackLayout Grid.Row="0" Grid.Column="0"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="8">

                <Image Source="inicio.png"

                       HeightRequest="160"
                       WidthRequest="160"
                       Aspect="AspectFit"
                       HorizontalOptions="Center" />

                <Label Text="Inicio"
                       TextColor="Black"
                       FontSize="18"
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Center" />


                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToInicioCommand}" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

            <!-- Botón Selección -->
            <VerticalStackLayout Grid.Row="0" Grid.Column="1"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="8">

                <Image Source="seleccion.png"
             HeightRequest="160"
             WidthRequest="160"
             Aspect="AspectFit"
             HorizontalOptions="Center" />

                <Label Text="Selección"
            TextColor="Black"
            FontSize="18"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Center" />

                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToSeleccionCommand}" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

            <!-- Fila 2 -->

            <!-- Botón Producción -->
            <VerticalStackLayout Grid.Row="1" Grid.Column="0"
         HorizontalOptions="Center"
         VerticalOptions="Center"
         Spacing="8">

                <Image Source="produccion.png"
                 HeightRequest="160"
                 WidthRequest="160"
                 Aspect="AspectFit"
                 HorizontalOptions="Center" />

                                <Label Text="Producción"
                TextColor="Black"
                FontSize="18"
                HorizontalTextAlignment="Center"
                HorizontalOptions="Center" />

                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToProduccionCommand}" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

            <!-- Botón Horas -->
            <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="8">

             <Image Source="hora.png"
             HeightRequest="160"
             WidthRequest="160"
             Aspect="AspectFit"
             HorizontalOptions="Center" />

                <Label Text="Horas"
            TextColor="Black"
            FontSize="18"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Center" />

                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToHorasCommand}" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

            <!-- Fila 3 -->

            <!-- Botón Salidas -->
            <VerticalStackLayout Grid.Row="2" Grid.Column="0"
         HorizontalOptions="Center"
         VerticalOptions="Center"
         Spacing="8">

                    <Image Source="salidas.png"
                 HeightRequest="160"
                 WidthRequest="160"
                 Aspect="AspectFit"
                 HorizontalOptions="Center" />

                    <Label Text="Salidas"
                TextColor="Black"
                FontSize="18"
                HorizontalTextAlignment="Center"
                HorizontalOptions="Center" />

                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToSalidasCommand}" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

            <!-- Fin -->
            <VerticalStackLayout Grid.Row="2" Grid.Column="1"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="8">

                <Image Source="fin.png"
             HeightRequest="160"
             WidthRequest="160"
             Aspect="AspectFit"
             HorizontalOptions="Center" />

                <Label Text="Fin"
            TextColor="Black"
            FontSize="18"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Center" />

                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToPanelCommand}" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentPage>
