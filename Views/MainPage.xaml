<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AlfinfData.ViewModels"
             x:Class="AlfinfData.Views.MainPage"
             Title="MainPage">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid Padding="40"
              RowDefinitions="Auto,*,Auto"
              ColumnDefinitions="*"
              BackgroundColor="{StaticResource PageBackgroundColor}">

            <Grid Grid.Row="1"
                  RowDefinitions="Auto,Auto,Auto"
                  ColumnDefinitions="*,*"
                  RowSpacing="25"
                  ColumnSpacing="25"
                  VerticalOptions="Center">

                <!-- INICIO -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8" HorizontalOptions="Center">
                    <Image Source="inicio.png"
                           HeightRequest="160"
                           WidthRequest="160"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />
                    <Label Text="Inicio"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalTextAlignment="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToInicioCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- SELECCIÓN -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="8" HorizontalOptions="Center">
                    <Image Source="seleccion.png"
                           HeightRequest="160"
                           WidthRequest="160"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />
                    <Label Text="Selección"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalTextAlignment="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSeleccionCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- PRODUCCIÓN -->
                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="8" HorizontalOptions="Center">
                    <Image Source="produccion.png"
                           HeightRequest="160"
                           WidthRequest="160"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />
                    <Label Text="Producción"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalTextAlignment="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToProduccionCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- HORAS -->
                <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="8" HorizontalOptions="Center">
                    <Image Source="hora.png"
                           HeightRequest="160"
                           WidthRequest="160"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />
                    <Label Text="Horas"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalTextAlignment="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToHorasCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- SALIDAS -->
                <VerticalStackLayout Grid.Row="2" Grid.Column="0" Spacing="8" HorizontalOptions="Center">
                    <Image Source="salidas.png"
                           HeightRequest="160"
                           WidthRequest="160"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />
                    <Label Text="Salidas"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalTextAlignment="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSalidasCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- FIN -->
                <VerticalStackLayout Grid.Row="2" Grid.Column="1" Spacing="8" HorizontalOptions="Center">
                    <Image Source="fin.png"
                           HeightRequest="160"
                           WidthRequest="160"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />
                    <Label Text="Fin"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalTextAlignment="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToPanelCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>